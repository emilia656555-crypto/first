    <script>
        // Показываем активные зоны при наведении на изображение
        const image = document.querySelector('img[usemap]');
        const hotspots = [];
        
        // Создаем визуальные индикаторы активных зон
        function createHotspots() {
            const areas = document.querySelectorAll('area');
            
            areas.forEach((area, index) => {
                const hotspot = document.createElement('div');
                hotspot.className = 'hotspot';
                hotspot.id = `hotspot-${index}`;
                
                const info = document.createElement('div');
                info.className = 'hotspot-info';
                info.textContent = area.getAttribute('title');
                
                document.querySelector('.image-map-container').appendChild(hotspot);
                document.querySelector('.image-map-container').appendChild(info);
                
                hotspots.push({ hotspot, info, area });
            });
        }
        
        // Обновляем позиции индикаторов при изменении размера
        function updateHotspots() {
            const imgRect = image.getBoundingClientRect();
            const containerRect = image.parentElement.getBoundingClientRect();
            
            hotspots.forEach(({ hotspot, info, area }) => {
                const coords = area.getAttribute('coords').split(',').map(Number);
                const shape = area.getAttribute('shape');
                
                let left, top, width, height;
                
                switch(shape) {
                    case 'rect':
                        left = coords[0];
                        top = coords[1];
                        width = coords[2] - coords[0];
                        height = coords[3] - coords[1];
                        break;
                    case 'circle':
                        left = coords[0] - coords[2];
                        top = coords[1] - coords[2];
                        width = height = coords[2] * 2;
                        break;
                    case 'poly':
                        // Для полигона находим bounding box
                        const xs = coords.filter((_, i) => i % 2 === 0);
                        const ys = coords.filter((_, i) => i % 2 === 1);
                        left = Math.min(...xs);
                        top = Math.min(...ys);
                        width = Math.max(...xs) - left;
                        height = Math.max(...ys) - top;
                        break;
                }
                
                // Позиционируем индикаторы
                hotspot.style.left = left + 'px';
                hotspot.style.top = top + 'px';
                hotspot.style.width = width + 'px';
                hotspot.style.height = height + 'px';
                
                info.style.left = (left + width/2) + 'px';
                info.style.top = (top - 40) + 'px';
                info.style.transform = 'translateX(-50%)';
            });
        }
        
        // Показываем/скрываем индикаторы
        image.addEventListener('mouseenter', () => {
            hotspots.forEach(({ hotspot, info }) => {
                hotspot.style.opacity = '1';
                info.style.opacity = '1';
            });
        });
        
        image.addEventListener('mouseleave', () => {
            hotspots.forEach(({ hotspot, info }) => {
                hotspot.style.opacity = '0';
                info.style.opacity = '0';
            });
        });
        
        // Инициализация
        document.addEventListener('DOMContentLoaded', () => {
            createHotspots();
            updateHotspots();
            window.addEventListener('resize', updateHotspots);
        });
    </script>
</body>
